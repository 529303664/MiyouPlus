<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/miyou_password_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="密码"
        android:gravity="center"
        android:layout_alignBottom="@+id/miyou_password_editText"
        android:textAppearance="?android:attr/textAppearanceMedium"
         />  

    <Button
        android:id="@+id/miyou_password_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/miyou_password_editText"
        android:text="确定" />

    <EditText
        android:id="@+id/miyou_password_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/miyou_password_button"
        android:layout_toRightOf="@+id/miyou_password_textView"
        android:hint="密码>=4位"
        android:ems="10"
        android:inputType="numberPassword"
        android:maxEms="10"
        android:maxLength="10" >

        <requestFocus />
    </EditText>

</RelativeLayout>
