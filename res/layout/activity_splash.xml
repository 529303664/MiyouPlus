<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/activity_splash_imageview" 
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_launcher"
        />

    <TextView
        android:id="@+id/activity_splash_textview_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_splash_imageview"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="@color/color_theme"
        android:textSize="@dimen/text_size_large" />
    
    <TextView
        android:id="@+id/activity_splash_textview_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_splash_textview_appname"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/advstring"
        android:textColor="@color/base_color_text_gray"
        android:textSize="@dimen/text_size_large" />

</RelativeLayout>
